formulas:
  DangerBadge: |
    js:
    const d = target.danger_level ?? target.dangerLevel ?? 0;
    if (d >= 8) return 'ðŸ”´ ' + d;
    if (d >= 5) return 'ðŸŸ  ' + d;
    if (d >= 3) return 'ðŸŸ¡ ' + d;
    if (d > 0) return 'ðŸŸ¢ ' + d;
    return '';
  QuestCount: |
    js:
    const qs = target.active_quests || target.activeQuests || [];
    return Array.isArray(qs) ? qs.length : 0;
  RegionDisplay: |
    js:
    return target.region || '-';
views:
  - type: table
    name: Quest Hubs
    filters:
      and:
        - or:
            - tags includes "location"
            - tags includes "Location"
        - active_quests
    order:
      - file.name
      - formula.QuestCount
      - formula.DangerBadge
      - region
    sort:
      - property: formula.QuestCount
        direction: DESC
    columnSize:
      file.name: 240
      formula.QuestCount: 120
      formula.DangerBadge: 100
      region: 180
  - type: table
    name: All Locations
    filters:
      and:
        - or:
            - tags includes "location"
            - tags includes "Location"
    order:
      - file.name
      - type
      - region
      - faction
      - formula.DangerBadge
    sort:
      - property: file.name
        direction: ASC
    columnSize:
      file.name: 240
      type: 140
      region: 160
      faction: 160
      formula.DangerBadge: 100
  - type: table
    name: Dangerous Areas
    filters:
      and:
        - or:
            - tags includes "location"
            - tags includes "Location"
        - danger_level
    order:
      - file.name
      - region
      - formula.DangerBadge
    sort:
      - property: danger_level
        direction: DESC
    columnSize:
      file.name: 240
      region: 160
      formula.DangerBadge: 100
  - type: table
    name: By Region
    filters:
      and:
        - or:
            - tags includes "location"
            - tags includes "Location"
    order:
      - region
      - file.name
    sort:
      - property: region
        direction: ASC
      - property: file.name
        direction: ASC
